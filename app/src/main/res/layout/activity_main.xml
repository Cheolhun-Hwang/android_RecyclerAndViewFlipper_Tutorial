<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hchooney.qewqs.recycler_tutorial.MainActivity">

    <LinearLayout
        android:layout_weight="3"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="center"
            android:text="Recycler And View Flipper"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/exam1"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Recycler View > Horizontal Line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/exam2"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Recycler View > Vertical Line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/exam3"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Recycler View > GridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/exam4"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Recycler View > Advanced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/exam5"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="ViewFlipper exam One"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/exam6"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="ViewFlipper exam Two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
